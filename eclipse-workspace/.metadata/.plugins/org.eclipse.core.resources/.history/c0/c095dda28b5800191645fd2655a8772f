package com.class17version2;

import java.util.Scanner;

public class HW0319 {
	
	public static void main(String[] args) {
		
//		Ask user to enter the item they want to by 
//		and  the price for the item. Then ask user to pay for it. 
//		Every time user enters money accumulate the amount 
//		and tell user how much is left to pay off the amount.
//		Whenever user done with payments tell them 
//		"Thank you for shopping!"
		
		Scanner scan = new Scanner (System.in);
		
		System.out.println("What do you want to buy? ");
		
		String item=scan.nextLine();
		
		System.out.println("Enter the price");
		
		int price =scan.nextInt();
		
		System.out.println("Please pay for this item: "+ price);
		
		System.out.println("User = I am giving you: ");
		
		int money= scan.nextInt();
		
		int total= price-money;
		if (price== money)
		{System.out.println("Thank you for shopping");
		}
	
		else if  (price!=money && money<price){
			
			System.out.println(" This amount is left to be paid= "+ total );
			
			
		}else {System.out.println("Your change is :" + total);}
			
	}
		}		
		

		
		
		
		
		
		
		
	


